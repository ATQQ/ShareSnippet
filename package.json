{
	"name": "snippet",
	"displayName": "Share Snippets",
	"description": "Share your code snippets through npm, so other developers can enjoy",
	"version": "1.0.1",
	"publisher": "sugar",
	"repository": {
		"url": "https://github.com/ATQQ/ShareSnippet",
		"directory": "/",
		"type": "git"
	},
	"author": {
		"name": "sugar",
		"email": "engineerzjl@foxmail.com",
		"url": "https://sugarat.top"
	},
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Snippets"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "snippet.refresh",
				"title": "Refresh"
			}
		],
		"snippets": [
			{
				"language": "json",
				"path": "./snippets/template.code-snippets"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "jest ./src/test/utils/**/*.js",
		"build": "vsce package",
		"publish": "vsce publish",
		"publish:minor": "vsce publish minor",
		"publish:patch": "vsce publish patch"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.40.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"jest": "^26.6.1",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
